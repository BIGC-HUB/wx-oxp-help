page {
    font-size: 28rpx;
    background: #efeff4;
}

.top {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 44rpx;

    width: 100%;
    height: 100rpx;
    background: #fff;
}
.top image {
    width: 24rpx;
    height: 40rpx;
}
.top text {
    width: 582rpx;
    font-size: 34rpx;
    text-align: center;
}

.choose {
    background: white;
}
.choose-checkbox {
    font-size: 34rpx;
    border-top: 1px solid #e5e5e5;
    border-bottom: 1px solid #e5e5e5;
}
.choose-checkbox label {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 20rpx  24rpx 20rpx 30rpx;
}
.choose-checked {
    color: #e44240;
}
.choose-tips {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    padding: 20rpx 0 10rpx;
    border-bottom: 1px solid #e5e5e5;
}
.choose-tip {
    display: inline-flex;
    justify-content: center;
    align-items: center;
    border-radius: 200rpx;
    background-color: #e44240;
    color: #FFF;
    margin: 20rpx;
    padding: 6rpx 28rpx;
    height: 52rpx;
}

.words {
    font-size: 34rpx;
    border-top: 1px solid #e5e5e5;
    height: 264rpx;
    margin-top: 88rpx;
    background: white;
    padding: 18rpx 30rpx;
}
.words textarea {
    width: 100%;
    height: 100%;
}

.imgs {
    font-size: 34rpx;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    border-top: 1px solid #e5e5e5;
    border-bottom: 1px solid #e5e5e5;
    height: 176rpx;
    background: white;
    padding: 18rpx 30rpx;
}
.imgs text {
    width: 142rpx;
    color: #969696;
    align-self: flex-start;
}
.imgs image {
    width: 132rpx;
    height: 132rpx;
}
.imgs-arr {
    display: flex;
    justify-content: flex-end;
    width: 422rpx;
}

.date {
    padding: 18rpx 30rpx 22rpx;
    background: white;
    /*height: 88rpx;*/
    font-size: 43rpx;
}

.tips-title {
    display: block;
    font-size: 34rpx;
    color: #969696;
    padding: 18rpx 30rpx;
}
.tips-box {
    background: white;
    border-top: 1px solid #e5e5e5;
    border-bottom: 1px solid #e5e5e5;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
}

.info-title {
    display: block;
    font-size: 34rpx;
    color: #969696;
    padding: 32rpx 16rpx;
}
.info-box {
    display: flex;
    border-top: 1px solid #e5e5e5;
    border-bottom: 1px solid #e5e5e5;
    padding: 20rpx 30rpx;
    font-size: 34rpx;
    background: white;
}
.info-box text {
    margin-right: 72rpx;
}
.info-submit {
    display: block;
    width: 670rpx;
    height: 94rpx;
    margin: 70rpx auto;
}
