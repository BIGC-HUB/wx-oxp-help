/* galbol */
page {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;

    margin: 0 auto;
    text-align: center;

    font-size: 16px;
    color: #343434;
    background: #efeff4;
}
page, button, input, select, textarea {
    font-family: SF UI Text,Hiragino Sans GB,Roboto,Segoe UI,Microsoft Yahei,sans-serif !important;
    letter-spacing: 0.8rpx;
}
/* box tan */
.box {
    width: 100%;
}
.tan {
    position: fixed;
    width: 100%;
    height: 100%;
}
.center {
    position:relative;
    top: 50%;
    transform: translateY(-50%);
}
/* button */
button {
    display: inline-block;
    margin: 0;
}
